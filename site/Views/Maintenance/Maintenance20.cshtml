<body>
    <!-- BEGIN PAGE -->
    <div id="main-content">
        <!-- BEGIN PAGE CONTAINER-->
        <div >
            <!-- BEGIN PAGE HEADER-->
            <div >
                <div class="span12">
                    <h3 class="page-title">
                        Mantenimiento de Preguntas
                    </h3>
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
                <div class="span12">
                    <!-- BEGIN SAMPLE FORMPORTLET-->
                    <div class="widget">
                        <div class="widget-title">
                            <h4><i class="icon-reorder"></i>Ingreso de Preguntas</h4>
                            <span class="tools">
                                <a href="javascript:;" class="icon-chevron-down"></a>
                            </span>
                        </div>
                        <div class="widget-body">
                            <form action="#" class="form-horizontal">
                                <div class="control-group">
                                    <label class="control-label">Seleccione el tema: </label>
                                    <div class="controls" id="">
                                        <select class="input-medium m-wrap" tabindex="1"></select>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Ingrese la Pregunta: </label>
                                    <div class="controls">
                                        <textarea class="input-xxlarge" rows="3"></textarea>
                                    </div>
                                </div>
                                <div class="control-group success">
                                    <label class="control-label">Ingrese la Respuesta correcta</label>
                                    <div class="controls input-icon">
                                        <input type="text" class="span6" />
                                        <span class="input-success tooltips" data-original-title="">
                                            <i class="icon-ok"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Segunda Opcion</label>
                                    <div class="controls">
                                        <input type="text" class="span6 " />
                                        <span class="help-inline"></span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Tercera Opcion</label>
                                    <div class="controls">
                                        <input type="text" class="span6 " />
                                        <span class="help-inline"></span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Cuarta Opcion</label>
                                    <div class="controls">
                                        <input type="text" class="span6 " />
                                        <span class="help-inline"></span>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>
                                    <button type="button" class="btn"><i class=" icon-remove"></i> Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="widget">
                <div class="widget-title">
                    <h4><i class="icon-reorder"></i>Subir Publicidad</h4>
                    <span class="tools">
                        <a href="javascript:;" class="icon-chevron-down"></a>
                        <a href="javascript:;" class="icon-remove"></a>
                    </span>
                </div>
                <div class="widget-body form">
                    <form action="#" class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">Subir Imagen</label>
                            <div class="controls">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                        <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                    <div>
                                        <span class="btn btn-file">
                                            <span class="fileupload-new">Seleccionar Imagen</span>
                                            <span class="fileupload-exists">Cambiar</span>
                                            <input type="file" class="default" />
                                        </span>
                                        <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Eliminar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Ingresar fecha de publicidad</label>
                            <div class="controls">
                                <div class="input-append date date-picker" data-date="" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    <input class=" m-ctrl-medium date-picker" size="16" type="text" value="12-02-2012" /><span class="add-on"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="widget">
                                <div class="widget-title">
                                    <h4><i class="icon-reorder"></i>Preguntas Ingresadas</h4>
                                    <span class="tools">
                                        <a href="javascript:;" class="icon-chevron-down"></a>
                                        <a href="javascript:;" class="icon-remove"></a>
                                    </span>
                                </div>
                                <div class="widget-body">
                                    <table class="table table-striped table-bordered" id="sample_1">
                                        <thead>
                                            <tr>
                                                <th style="width:8px;"><input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" /></th>
                                                <th>Pregunta</th>
                                                <th class="hidden-phone">Respuesta Correcta</th>
                                                <th class="hidden-phone">Segunda Opcion</th>
                                                <th class="hidden-phone">Tercera Opcion</th>
                                                <th class="hidden-phone">Cuarta Opcion</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                            <tr class="odd gradeX"></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
