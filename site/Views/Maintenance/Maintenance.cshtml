    <script>
        jQuery(document).ready(function () {
            Parse.initialize("OmIJRj0XHQrGQOkNZBWJHWXAAv9vpwlaE1a4X1SS", "sgLf60LloPYpJwsIFHzxCYZdeYiQ0e1Of2sSMw8N");
            $("#listaPreguntas").empty();
            //TODO: pasarlo al boton de add tambien
            var categoria = $("#cmbCategorias").val();
            getPreguntasByCategoria(categoria);
            $("#cmbCategorias").on('change', function () {
                var categoria = $("#cmbCategorias").val();
                getPreguntasByCategoria(categoria);
            });
            $("#btnSave").on('click', function () {
                var categoria = $("#cmbCategorias").val();
                addQuestionTotable(categoria);
            });
            $("#img").on('click', function () {
                var categoria = $("#cmbCategorias").val();
                uploadImg();
            });

        });

        function addQuestionTotable(categoria) {
            var question = $('#question').val();
            var answer1 = $('#answer1').val();
            var answer2 = $('#answer2').val();
            var answer3 = $('#answer3').val();
            var answer4 = $('#answer4').val();
           
            var id;
            
            var GameScore = Parse.Object.extend(categoria);
            var query = new Parse.Query(GameScore);
            
            query.count({
                success: function (count) {
                    id = count;
                    var temp = [answer1, answer2, answer3, answer4];
                    var GameScore = Parse.Object.extend(categoria);
                    var gameScore = new GameScore();
                    gameScore.set("Pregunta", question);
                    gameScore.set("opciones", temp);
                    gameScore.set("IdPregunta", id);
                    gameScore.set("indexanswer", 0);
                    gameScore.save(null, {
                        success: function (gameScore) {
                            alert('Se guardo la pregunta exitosamente');
                        },
                        error: function (gameScore, error) {
                            alert('Ocurrio un error al guardar la pregunta');
                        }
                    });
                },
                error: function (error) {
                }
            });
            getPreguntasByCategoria(categoria);
            $('#question').val('');
            $('#answer1').val('');
            $('#answer2').val('');
            $('#answer3').val('');
            $('#answer4').val('');
        }

        function getPreguntasByCategoria(categoria) {
            $("#listaPreguntas").empty();
            var GameScore = Parse.Object.extend(categoria);
            var query = new Parse.Query(GameScore);
            query.find({
                success: function (results) {
                    for (var i = 0; i < results.length; i++) {
                        var object = results[i];
                        var tr = $('<tr/>');
                        var td = $('<td/>');
                        td.text(object.get('Pregunta'));
                        tr.append(td);
                        $("#listaPreguntas").append(tr);
                        for (var j = 0; j < object.attributes.opciones.length; j++) {
                            td = $('<td/>');//col
                            td.text(object.attributes.opciones[j]);
                            tr.append(td)
                            $("#listaPreguntas").append(tr);
                        }
                    }
                },
                error: function (error) {
                    alert("Error: " + error.code + " " + error.message);
                }
            });
        }

        function uploadImg() {
            debugger;
            var fecha = $("#dateBtn").val();
        var fileUploadControl = $("#profilePhotoFileUpload")[0];
        if (fileUploadControl.files.length > 0) {
            var file = fileUploadControl.files[0];
            var name = "photo.png";
            var parseFile = new Parse.File(name, file);
        }
        parseFile.save().then(function () {
            alert("Se grabo la pic");
        }, function (error) {
            // The file either could not be read, or could not be saved to Parse.
        });
        var jobApplication = new Parse.Object("Ads");
        jobApplication.set("image", parseFile);
        //jobApplication.set("date", fecha);
        jobApplication.save();

       
        }
